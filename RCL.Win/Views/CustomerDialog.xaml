<Window x:Class="RCL.Win.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer"
        
        MinWidth="360" MinHeight="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <Border >
        <StackPanel>
            <TextBlock Text="New Customer" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Full name" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" x:Name="txtName" Margin="0,4,0,8" Height="30"/>
            </Grid>

            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Phone" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" x:Name="txtPhone" Margin="0,4,0,8" Height="30"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnCancel" Content="Cancel" Width="90" Margin="6"  Click="BtnCancel_Click" IsCancel="True"/>
                <Button Name="btnOk" Content="OK" Width="90" Margin="6"  Click="BtnOk_Click" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

