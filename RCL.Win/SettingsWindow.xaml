<Window x:Class="RCL.Win.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="260" Width="420" Style="{DynamicResource DialogWindowStyle}">
  <Border Style="{DynamicResource CardBorder}">
    <Grid Margin="12">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <TextBlock Text="Appearance" FontWeight="Bold" FontSize="{DynamicResource AppFontSize}" Margin="0,0,0,8"/>
      <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6">
        <StackPanel Orientation="Vertical" Width="260">
          <TextBlock Text="Theme" Margin="0,0,0,6"/>
          <ComboBox x:Name="ThemeCombo" Width="220" Margin="0,0,0,8">
            <ComboBoxItem Tag="Light">Light</ComboBoxItem>
            <ComboBoxItem Tag="Dark">Dark</ComboBoxItem>
          </ComboBox>

          <TextBlock Text="App font size" Margin="0,8,0,6"/>
          <Slider x:Name="FontSlider" Minimum="10" Maximum="24" Width="220"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="12,0,0,0">
          <Button x:Name="BtnSave" Content="Save" Style="{DynamicResource PrimaryButton}" Width="100" Height="36" Click="BtnSave_Click"/>
          <Button x:Name="BtnCancel" Content="Cancel" Margin="0,8,0,0" Style="{DynamicResource SecondaryButton}" Width="100" Height="36" Click="BtnCancel_Click"/>
        </StackPanel>
      </StackPanel>
    </Grid>
  </Border>
</Window>

