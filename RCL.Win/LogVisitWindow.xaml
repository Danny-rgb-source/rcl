<Window x:Class="RCL.Win.Views.LogVisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Visit"
        
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource WindowForeground}"
        MinWidth="440" MinHeight="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <Border >
        <StackPanel>
            <TextBlock Text="Log Visit" FontWeight="SemiBold" Margin="0,0,0,8"/>

            <Grid Margin="0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Customer" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" x:Name="cmbCustomers" Height="30" DisplayMemberPath="Name"/>
            </Grid>

            <Grid Margin="0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Business" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" x:Name="cmbBusinesses" Height="30" DisplayMemberPath="Name"/>
            </Grid>

            <Grid Margin="0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Amount (optional)" />
                    <TextBox x:Name="txtAmount" Height="30" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Visit date" />
                    <DatePicker x:Name="dpDate" Height="30" />
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="BtnCancel" Content="Cancel"  Width="100" Margin="6" Click="BtnCancel_Click" IsCancel="True"/>
                <Button x:Name="BtnSaveVisit" Content="Save Visit"  Width="120" Margin="6" Click="BtnSave_Click" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

